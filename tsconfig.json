{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "target": "es6",
    "lib": [
      "ES5",
      "ES6",
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "isolatedModules": true,
    "jsx": "react",
    "types": [
      "jest",
      "@jest/globals"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
